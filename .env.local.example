# Required: Anthropic API key for the Editorial OS brain.
ANTHROPIC_API_KEY=your-anthropic-key-here

# Optional: model tuning.
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=900
ANTHROPIC_TEMPERATURE=0.2

# Optional: timeout for external tool calls (ms).
EDITORIAL_OS_TOOL_TIMEOUT_MS=15000

# Optional: set an API base URL if UI and API are on different domains.
NEXT_PUBLIC_EDITORIAL_OS_API_BASE_URL=http://localhost:3000

# Optional: configure CORS for cross-origin UIs.
# Example: https://chat.example.com
CORS_ALLOW_ORIGIN=http://localhost:3000

# Optional: Notion system of record (source of truth).
NOTION_TOKEN=your-notion-token-here
NOTION_DEFAULT_CLIENT_ID=default
NOTION_DEFAULT_CLIENT_NAME=Default Client
NOTION_BASE_OS_PAGE_ID=your-base-os-page-id
NOTION_SKILLS_DB_ID=your-skills-db-id
NOTION_OUTPUTS_DB_ID=your-outputs-db-id
NOTION_HISTORY_DB_ID=your-history-db-id
NOTION_LEDGER_DB_ID=your-ledger-db-id

# Optional: per-client config (JSON map keyed by client_id).
# Example:
# {"wander":{"name":"Wander","base_os_page_id":"...","skills_db_id":"...","outputs_db_id":"...","history_db_id":"...","ledger_db_id":"..."}}
NOTION_CLIENT_CONFIG_JSON=

# Optional: Notion database property mapping.
NOTION_VERSION=2022-06-28
NOTION_TITLE_FIELD=Name
NOTION_STATUS_FIELD=Status
NOTION_STATUS_TYPE=status
NOTION_SUMMARY_FIELD=Summary
NOTION_TAGS_FIELD=Tags
NOTION_LEDGER_OUTPUT_FIELD=Output Link
NOTION_LEDGER_OUTPUT_FIELD_TYPE=url

# Skills schema mapping (v1 canonical).
NOTION_SKILLS_NAME_FIELD=Skill Name
NOTION_SKILLS_TYPE_FIELD=Skill Type
NOTION_SKILLS_TRIGGER_FIELD=Trigger Condition
NOTION_SKILLS_INPUTS_FIELD=Inputs Required
NOTION_SKILLS_INSTRUCTIONS_FIELD=Skill Instructions
NOTION_SKILLS_OUTPUT_FIELD=Output Constraints
NOTION_SKILLS_REQUIRES_FIELD=Requires Tools
NOTION_SKILLS_STATUS_FIELD=Status
NOTION_SKILLS_STATUS_TYPE=status
NOTION_SKILLS_STATUS_ACTIVE_VALUE=Active

# Editorial outputs schema mapping.
NOTION_OUTPUTS_TITLE_FIELD=Title
NOTION_OUTPUTS_TYPE_FIELD=Output Type
NOTION_OUTPUTS_STATUS_FIELD=Status
NOTION_OUTPUTS_STATUS_TYPE=status
NOTION_OUTPUTS_BODY_FIELD=Content
NOTION_OUTPUTS_SKILLS_FIELD=Skills Used
NOTION_OUTPUTS_TOOL_ARTIFACTS_FIELD=Tool Artifacts
BEEHIIV_API_KEY=your-beehiiv-key-here
BEEHIIV_PUBLICATION_ID=your-publication-id-here
BEEHIIV_API_BASE_URL=https://api.beehiiv.com/v2
CLOUDINARY_CLOUD_NAME=your-cloud-name-here
CLOUDINARY_API_KEY=your-cloudinary-key-here
CLOUDINARY_API_SECRET=your-cloudinary-secret-here
SLACK_BOT_TOKEN=your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
SLACK_DEFAULT_CHANNEL=newsletter
SLACK_DEFAULT_TRACK=newsletter
SLACK_DEFAULT_CLIENT_ID=default
# Optional: map Slack channel IDs to client_ids.
# Example: {"C1234567890":"wander"}
SLACK_CHANNEL_CLIENT_MAP=

# Optional: status labels for v1 ledger/output flow.
EDITORIAL_OUTPUT_STATUS_IN_REVIEW=In Review
EDITORIAL_LEDGER_STATUS_IN_PROGRESS=In Progress
EDITORIAL_LEDGER_STATUS_IN_REVIEW=In Review
EDITORIAL_LEDGER_STATUS_COMPLETED=Completed
EDITORIAL_BASE_OS_TEXT=
