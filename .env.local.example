# Required: Anthropic API key for the Editorial OS brain.
ANTHROPIC_API_KEY=your-anthropic-key-here

# Optional: model tuning.
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620
ANTHROPIC_MAX_TOKENS=900
ANTHROPIC_TEMPERATURE=0.2

# Optional: set an API base URL if UI and API are on different domains.
NEXT_PUBLIC_EDITORIAL_OS_API_BASE_URL=http://localhost:3000

# Optional: configure CORS for cross-origin UIs.
# Example: https://chat.example.com
CORS_ALLOW_ORIGIN=http://localhost:3000

# Optional: tool credentials (used by server-side skills).
NOTION_TOKEN=your-notion-token-here
NOTION_LEDGER_DB_ID=your-database-id-here
BEEHIIV_API_KEY=your-beehiiv-key-here
BEEHIIV_PUBLICATION_ID=your-publication-id-here
CLOUDINARY_CLOUD_NAME=your-cloud-name-here
CLOUDINARY_API_KEY=your-cloudinary-key-here
CLOUDINARY_API_SECRET=your-cloudinary-secret-here
SLACK_BOT_TOKEN=your-slack-bot-token-here
